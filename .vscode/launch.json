{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Windows Build"
        },
        {
            "name": "macOS Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main",
            "cwd": "${workspaceFolder}",
            "MIMode": "lldb",
            "preLaunchTask": "macOS Build",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
